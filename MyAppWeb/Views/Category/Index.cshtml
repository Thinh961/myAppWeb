@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>List of Categories</h1>

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="Create" asp-controller="Category"><i class="bi bi-plus-circle"></i> Create New Category</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width: 100%">
    <thead>
        <tr>
            <th scope="col">Category Name</th>
            <th scope="col">Display Order</th>
            <th scope="col">CreatedDateTime</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <td>@item.Name</td>
            <td>@item.DisplayOrder</td>
            <td>@item.CreatedDateTime</td>
            <td role="group">
                    <a asp-action="Edit" asp-controller="category" asp-route-id="@item.Id"><i class="text-success bi bi-pencil-square"></i></a>
                    <a asp-action="Delete" asp-controller="category" asp-route-id="@item.Id"><i class="text-danger bi bi-trash"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>